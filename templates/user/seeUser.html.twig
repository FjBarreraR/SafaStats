{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Título -->
            <h1 class="h3 text-secondary">
                <i class="bi bi-people-fill me-2"></i>Usuarios Registrados
            </h1>
            <!-- Cantidad de usuarios -->
            <span class="badge bg-primary rounded-pill">{{ users|length }} usuarios</span>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <!-- Partes de la tabla -->
                        <tr>
                            <th class="py-3 ps-4">ID</th>
                            <th class="py-3">Correo Electrónico</th>
                            <th class="py-3 text-end pe-4">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <!-- Cargar y mostrar todos los Usuarios de la base de datos -->
                        {% for user in users %}
                            <tr>
                                <td class="ps-4 text-muted">#{{ loop.index }}</td>
                                <td class="fw-bold text-dark">
                                    <i class="bi bi-envelope me-2 text-muted"></i>{{ user.email }}
                                </td>
                                <td class="text-end pe-4">
                                    <a href="#" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        <!-- Párrafo alternativo por si no hay usuarios en la base de datos -->
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-emoji-frown d-block fs-1 mb-2"></i>
                                        No hay usuarios registrados en el sistema.
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
