{% extends 'base.html.twig' %}

{% block title %}Panel de Categorías{% endblock %}

{% block body %}
    <script src="https://cdn.tailwindcss.com"></script>

    <div class="min-h-screen bg-stone-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">

            <div class="mb-12 border-l-8 border-emerald-600 pl-6">
                <!-- Título -->
                <h1 class="text-4xl font-black text-stone-900 uppercase tracking-tight">
                    Categorías Registradas
                </h1>
                <!-- Aclaración -->
                <p class="text-stone-500 mt-2 text-lg">
                    Gestión y valoración de los {{ categories|length }} grupos de categorías disponibles.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Mostrar todas las Categorías -->
                {% for category in categories %}
                    <div class="group bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-500 border border-stone-200 flex flex-col overflow-hidden">

                        {% set sampleDino = category.dinosaurs|first %}

                        <div class="relative h-56 w-full bg-stone-200 overflow-hidden">
                            {% if sampleDino and sampleDino.image %}
                                <img src="{{ sampleDino.image }}"
                                     alt="{{ category.name }}"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
                            {% else %}
                                <div class="flex items-center justify-center h-full text-stone-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            {% endif %}

                            <div class="absolute top-4 right-4 bg-black/50 backdrop-blur-md text-white px-3 py-1 rounded-full text-xs font-bold">
                                {{ category.dinosaurs|length }} Especies | 
                                {{ rankingCounts[category.id] ?? 0 }} Votos
                            </div>
                        </div>

                        <div class="p-6 flex flex-col flex-grow">
                            <h2 class="text-2xl font-bold text-stone-800 mb-2 group-hover:text-emerald-700 transition-colors">
                                {{ category.name }}
                            </h2>

                            <!-- Atributos extraídos de la entidad Dinosaurios -->
                            {% if sampleDino %}
                                <div class="flex flex-wrap gap-2 mb-6">
                                <span class="bg-stone-100 text-stone-600 px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider border border-stone-200">
                                    {{ sampleDino.diet }}
                                </span>
                                    <span class="bg-stone-100 text-stone-600 px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider border border-stone-200">
                                    {{ sampleDino.period }}
                                </span>
                                    <span class="bg-stone-100 text-stone-600 px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wider border border-stone-200">
                                    {{ sampleDino.type }}
                                </span>
                                </div>
                            {% endif %}

                            <!-- Botón valorar -->
                            <div class="mt-auto">
                                <a href="{{ path('top_rated_dinos_rate_app', {'id': category.id}) }}"
                                   class="flex items-center justify-center w-full px-6 py-3 bg-emerald-600 hover:bg-stone-900 text-white font-bold rounded-xl transition-colors duration-300 shadow-lg shadow-emerald-200 hover:shadow-stone-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.388 2.46a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.388-2.46a1 1 0 00-1.175 0l-3.388 2.46c-.784.57-1.838-.197-1.539-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.245 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z" />
                                    </svg>
                                    Valorar Ranking
                                </a>
                            </div>
                        </div>
                    </div>
                <!-- Párrafo alternativo por si no hay Categorías disponibles en la base de datos -->
                {% else %}
                    <div class="col-span-full bg-white p-12 rounded-3xl border-2 border-dashed border-stone-300 text-center">
                        <p class="text-stone-400 text-xl font-medium">No hay categorías disponibles en la base de datos.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
