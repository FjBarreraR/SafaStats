{% extends 'base.html.twig' %}

{% block title %}Asignar Posiciones - {{ category.name }}{% endblock %}

{% block body %}
    <script src="https://cdn.tailwindcss.com"></script>

    <div class="min-h-screen bg-stone-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">

            <div class="bg-white rounded-t-3xl p-8 border-b border-stone-100 shadow-sm">
                <!-- Título -->
                <h1 class="text-3xl font-black text-stone-800 tracking-tight">
                    VALORAR CATEGORÍA: <span class="text-emerald-600">{{ category.name|upper }}</span>
                </h1>
                <!-- Aclaración para saber como votar el Ranking -->
                <p class="text-stone-500 mt-2 font-medium">
                    Selecciona la posición (1 al {{ category.dinosaurs|length }}) para cada especie sin repetir números.
                </p>
            </div>

            <!-- Formulario -->
            <form action="{{ path('category_submit_rating', {'id': category.id}) }}" method="POST" id="rankingForm">
                <div class="bg-white shadow-xl overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-stone-50 text-stone-400 uppercase text-xs font-bold tracking-widest">
                        <tr>
                            <th class="px-8 py-4">Especie</th>
                            <th class="px-8 py-4 text-center w-40">Posición</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-stone-100">
                        <!-- Mostrar todos los Dinosaurios de la Categoría  -->
                        {% for dino in category.dinosaurs %}
                            <tr class="hover:bg-stone-50 transition-colors group">
                                <td class="px-8 py-6">
                                    <div class="flex items-center">
                                        <div class="h-16 w-16 flex-shrink-0 rounded-2xl overflow-hidden border-2 border-stone-100 group-hover:border-emerald-200 transition-colors">
                                            <img src="{{ dino.image }}" alt="{{ dino.name }}" class="h-full w-full object-cover">
                                        </div>
                                        <div class="ml-6">
                                            <div class="text-lg font-bold text-stone-800">{{ dino.name }}</div>
                                            <div class="text-sm text-stone-500 italic">{{ dino.diet }} • {{ dino.period }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="flex justify-center">
                                        <select
                                            name="ranking[{{ dino.id }}]"
                                            required
                                            class="ranking-select block w-32 p-3 bg-stone-100 border-none rounded-xl text-center font-black text-stone-700 focus:ring-2 focus:ring-emerald-500 focus:bg-white transition-all appearance-none cursor-pointer disabled:opacity-50"
                                        >
                                            <option value="" selected>-</option>
                                            {% for i in 1..category.dinosaurs|length %}
                                                <option value="{{ i }}">{{ i }}º</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="bg-stone-800 p-8 rounded-b-3xl flex flex-col md:flex-row items-center justify-between gap-4">
                    <!-- Validación de que hay que tener todas las posiciones ocupadas -->
                    <div id="validation-msg" class="text-stone-400 text-sm font-medium transition-opacity">
                        Completa todas las posiciones para continuar.
                    </div>
                    <!-- Botones -->
                    <div class="flex gap-4">
                        <!-- Botón de Cancelar -->
                        <a href="{{ path('show_categories_top_rated_dinos_app') }}" class="px-6 py-3 text-stone-400 hover:text-white transition-colors font-bold uppercase text-sm">
                            Cancelar
                        </a>
                        <!-- Botón de Guardar Ranking -->
                        <button type="submit" id="submitBtn" disabled class="px-10 py-3 bg-emerald-500 hover:bg-emerald-400 text-stone-900 font-black rounded-xl shadow-lg shadow-emerald-900/20 transition-all active:scale-95 uppercase text-sm tracking-wider opacity-50 cursor-not-allowed">
                            Guardar Ranking
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const selects = document.querySelectorAll('.ranking-select');
            const submitBtn = document.getElementById('submitBtn');
            const msg = document.getElementById('validation-msg');

            // Función para ver que posiciones están disponibles
            function updateAvailableOptions() {
                // Obtiene todos los valores que ya han sido seleccionados sin contar con los que están vacíos
                const selectedValues = Array.from(selects)
                    .map(s => s.value)
                    .filter(val => val !== "");

                let allFilled = true;

                // Recorrer cada selector para actualizar sus opciones internas
                selects.forEach(select => {
                    if (select.value === "") allFilled = false;

                    // Recorrer cada <option> dentro del selector actual
                    Array.from(select.options).forEach(option => {
                        // Saltamos la opción por defecto ("-")
                        if (option.value === "") return;

                        // Condición: Si el valor está en la lista de seleccionados Y
                        // NO es el valor que tiene seleccionado este input actualmente
                        if (selectedValues.includes(option.value) && select.value !== option.value) {
                            option.disabled = true;
                            option.innerText = option.value + "º (Ocupado)";
                        } else {
                            option.disabled = false;
                            option.innerText = option.value + "º";
                        }
                    });
                });

                // Gestionar el estado del botón Guardar
                if (allFilled) {
                    submitBtn.disabled = false;
                    submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    msg.innerHTML = "✅ ¡Ranking completo! Ya puedes guardar.";
                    msg.classList.remove('text-stone-400');
                    msg.classList.add('text-emerald-400');
                } else {
                    submitBtn.disabled = true;
                    submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
                    msg.innerHTML = "Completa todas las posiciones para continuar.";
                    msg.classList.remove('text-emerald-400');
                    msg.classList.add('text-stone-400');
                }
            }

            // Asignar el evento change a todos los selects
            selects.forEach(select => {
                select.addEventListener('change', updateAvailableOptions);
            });

            // Ejecutar una vez al inicio por si el navegador guardó valores en caché (soft refresh)
            updateAvailableOptions();
        });
    </script>
{% endblock %}
