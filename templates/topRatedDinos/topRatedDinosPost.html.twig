{% extends 'base.html.twig' %}

{% block title %}Asignar Posiciones - {{ category.name }}{% endblock %}

{% block body %}
    <script src="https://cdn.tailwindcss.com"></script>

    <div class="min-h-screen bg-stone-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">

            {# Cabecera #}
            <div class="bg-white rounded-t-3xl p-8 border-b border-stone-100 shadow-sm">
                <h1 class="text-3xl font-black text-stone-800 tracking-tight">
                    VALORAR CATEGORÍA: <span class="text-emerald-600">{{ category.name|upper }}</span>
                </h1>
                <p class="text-stone-500 mt-2 font-medium">
                    Selecciona la posición (1 al {{ category.dinosaurs|length }}) para cada especie.
                </p>
            </div>

            {# Formulario de Lista #}
            <form action="{{ path('category_submit_rating', {'id': category.id}) }}" method="POST" id="rankingForm">
                <div class="bg-white shadow-xl overflow-hidden">
                    <table class="w-full text-left">
                        <thead class="bg-stone-50 text-stone-400 uppercase text-xs font-bold tracking-widest">
                        <tr>
                            <th class="px-8 py-4">Espécimen</th>
                            <th class="px-8 py-4 text-center w-40">Posición</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-stone-100">
                        {% for dino in category.dinosaurs %}
                            <tr class="hover:bg-stone-50 transition-colors group">
                                <td class="px-8 py-6">
                                    <div class="flex items-center">
                                        <div class="h-16 w-16 flex-shrink-0 rounded-2xl overflow-hidden border-2 border-stone-100 group-hover:border-emerald-200 transition-colors">
                                            <img src="{{ dino.image }}" alt="{{ dino.name }}" class="h-full w-full object-cover">
                                        </div>
                                        <div class="ml-6">
                                            <div class="text-lg font-bold text-stone-800">{{ dino.name }}</div>
                                            <div class="text-sm text-stone-500 italic">{{ dino.diet }} • {{ dino.period }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="flex justify-center">
                                        <select
                                            name="ranking[{{ dino.id }}]"
                                            required
                                            class="ranking-select block w-24 p-3 bg-stone-100 border-none rounded-xl text-center font-black text-stone-700 focus:ring-2 focus:ring-emerald-500 focus:bg-white transition-all appearance-none cursor-pointer"
                                        >
                                            <option value="" disabled selected>-</option>
                                            {% for i in 1..category.dinosaurs|length %}
                                                <option value="{{ i }}">{{ i }}º</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Botonera Inferior #}
                <div class="bg-stone-800 p-8 rounded-b-3xl flex flex-col md:flex-row items-center justify-between gap-4">
                    <div id="validation-msg" class="text-emerald-400 text-sm font-medium opacity-0 transition-opacity">
                        ✨ Todas las posiciones son únicas y válidas.
                    </div>
                    <div class="flex gap-4">
                        <a href="{{ path('show_categories_top_rated_dinos_app') }}" class="px-6 py-3 text-stone-400 hover:text-white transition-colors font-bold uppercase text-sm">
                            Cancelar
                        </a>
                        <button type="submit" class="px-10 py-3 bg-emerald-500 hover:bg-emerald-400 text-stone-900 font-black rounded-xl shadow-lg shadow-emerald-900/20 transition-all active:scale-95 uppercase text-sm tracking-wider">
                            Guardar Ranking
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Script sencillo para detectar si hay posiciones repetidas
        const selects = document.querySelectorAll('.ranking-select');
        const msg = document.getElementById('validation-msg');

        selects.forEach(select => {
            select.addEventListener('change', () => {
                const values = Array.from(selects).map(s => s.value).filter(v => v !== "");
                const isDuplicate = new Set(values).size !== values.length;

                if (isDuplicate) {
                    msg.textContent = "⚠️ Hay posiciones repetidas";
                    msg.classList.remove('text-emerald-400');
                    msg.classList.add('text-red-400', 'opacity-100');
                } else if (values.length === selects.length) {
                    msg.textContent = "✅ Ranking completo y listo";
                    msg.classList.remove('text-red-400');
                    msg.classList.add('text-emerald-400', 'opacity-100');
                }
            });
        });
    </script>
{% endblock %}
