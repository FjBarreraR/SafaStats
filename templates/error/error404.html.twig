{% extends 'base.html.twig' %}

{% block title %}404 - Especie Extinta{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-start align-items-center vh-100 pt-5">
        <h1 class="mb-5 text-dark fw-bold">404 - Especie Extinta</h1>

        <div class="row g-4 justify-content-center w-100">
            <div class="col-10 col-md-6">
