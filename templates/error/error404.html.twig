                <a href="/" class="text-decoration-none">
                    <div class="card text-center text-white bg-dark-blue card-hover h-100 shadow">
                        <div class="card-body py-5">
                            <img src="{{ asset('images/rankings.png') }}" alt="Not Found" width="64" height="64" class="icon-white mb-3" style="opacity: 0.5">
                            <h3 class="card-title">Página no encontrada</h3>
                            <p class="mt-3">El dinosaurio que buscas se ha escapado de su recinto.</p>
                            <span class="badge bg-light text-dark">Volver al Inicio</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
