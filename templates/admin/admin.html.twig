{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-start align-items-center vh-100 pt-5">

        <h2 class="mb-4">Panel de Control</h2>

        <div class="row g-4 justify-content-center w-100">
            <div class="col-md-3">
                <a href="#" class="text-decoration-none text-white">
                    <div class="card text-center text-white bg-dark-blue card-hover h-100">
                        <div class="card-body py-5">
                            <img src="{{ asset('images/dataLoad.png') }}" alt="Data" width="64" height="64" class="icon-white mb-3">
                            <h3 class="card-title">Data Load</h3>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="{{ path('category_app') }}" class="text-decoration-none text-white">
                    <div class="card text-center text-white bg-yellow card-hover h-100">
                        <div class="card-body py-5">
                            <img src="{{ asset('images/categories.png') }}" alt="Categories" width="64" height="64" class="mb-3" style="filter: brightness(0);">
