                        <div class="card-body py-5">
                            <img src="{{ asset('images/user.png') }}" alt="Users" width="64" height="64" class="icon-white mb-3">
                            <h3 class="card-title">Users Panel</h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="mt-5">
            <a href="{{ path('app_home') }}" class="btn btn-outline-dark">Volver al Home</a>
        </div>
    </div>
{% endblock %}
