{% extends 'base.html.twig' %}

{% block title %}{{ dinosaur.name }} Details{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">

        <!-- Botón Volver a la lista -->
        <div class="mb-4">
            <a href="{{ path('app_dinosaur') }}" class="text-decoration-none text-secondary">
                &larr; Back to list
            </a>
        </div>

        <div class="card shadow-lg border-0 overflow-hidden">
            {# --- Header con Nombre y Popularidad --- #}
            <div class="card-header bg-dark text-white p-4 d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">{{ dinosaur.name }}</h1>
                <div class="d-flex align-items-center gap-2">
                    {% if dinosaur.isPopular %}
                        <span class="badge bg-warning text-dark fs-6">
                            ★ Popular Choice
                        </span>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="#" class="btn btn-sm btn-outline-light">Edit</a>
                    {% endif %}
                </div>
            </div>

            <div class="card-body p-0">
                <div class="row g-0">
                    {# --- Columna Izquierda: Imagen --- #}
                    <div class="col-md-5 bg-light d-flex align-items-center justify-content-center p-3">
                        <img src="{{ dinosaur.image|default('https://via.placeholder.com/400x400') }}"
                             class="img-fluid rounded shadow-sm"
                             alt="{{ dinosaur.name }}"
                             style="max-height: 400px; width: 100%; object-fit: cover;">
                    </div>

                    {# --- Columna Derecha: Información Principal --- #}
                    <div class="col-md-7 p-4 p-lg-5">
                        <h4 class="text-primary mb-3">Taxonomy & Location</h4>

                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <th scope="row" class="text-muted w-25">Type:</th>
                                <td class="fw-bold">{{ dinosaur.type }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Diet:</th>
                                <td>
                                        <span class="badge {% if 'carnivore' in dinosaur.diet|lower %}bg-danger{% elseif 'herbivore' in dinosaur.diet|lower %}bg-success{% else %}bg-secondary{% endif %} fs-6">
                                            {{ dinosaur.diet }}
                                        </span>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Period:</th>
                                <td>{{ dinosaur.period }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Existed:</th>
                                <td>{{ dinosaur.existed }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Region:</th>
                                <td>{{ dinosaur.region }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                {# --- Sección de Estadísticas Físicas --- #}
                <div class="bg-light p-4 border-top border-bottom">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="p-3 bg-white rounded shadow-sm h-100">
                                <h6 class="text-uppercase text-muted small">Weight</h6>
                                <p class="h4 text-dark mb-0">{{ dinosaur.weight }}</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="p-3 bg-white rounded shadow-sm h-100">
                                <h6 class="text-uppercase text-muted small">Height</h6>
                                <p class="h4 text-dark mb-0">{{ dinosaur.height }}</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-white rounded shadow-sm h-100">
                                <h6 class="text-uppercase text-muted small">Length</h6>
                                <p class="h4 text-dark mb-0">
                                    {{ dinosaur.length|default('N/A') }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                {# --- Sección de Descripción --- #}
                <div class="p-4 p-lg-5 border-bottom">
                    <h4 class="text-primary mb-3">Description</h4>
                    <div class="text-muted lead" style="font-size: 1.1rem; line-height: 1.8;">
                        {{ dinosaur.description|nl2br }}
                    </div>
                </div>

                {# --- SECCIÓN DE REVIEWS (NUEVA) --- #}
                <div class="p-4 p-lg-5 bg-white">
                    <h4 class="text-primary mb-4">User Reviews</h4>

                    {% if app.user %}
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="mb-3">Leave a review as: <span class="text-primary">{{ app.user.email }}</span></h6>
                                <form action="#" method="POST">
                                    <div class="mb-3">
                                        <textarea class="form-control" rows="3" placeholder="What do you think about the {{ dinosaur.name }}?"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Post Review</button>
                                </form>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            Please <a href="#">login</a> to leave a review.
                        </div>
                    {% endif %}

                    {# Lista de Reviews (Ejemplo estático o bucle) #}
                    <div class="review-list">
                        {% for review in dinosaur.reviews|default([]) %}
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between">
                                    <strong class="text-dark">{{ review.userEmail }}</strong>
                                    <small class="text-muted">{{ review.createdAt|date('Y-m-d') }}</small>
                                </div>
                                <p class="mb-0 text-muted mt-2">{{ review.content }}</p>
                            </div>
                        {% else %}
                            <p class="text-muted italic">No reviews yet. Be the first!</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white p-3 text-end">
                <small class="text-muted">Dinosaur ID: {{ dinosaur.id|default('N/A') }}</small>
            </div>
        </div>
    </div>
{% endblock %}
