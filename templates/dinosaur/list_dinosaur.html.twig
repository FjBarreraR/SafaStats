{% extends 'base.html.twig' %}

{% block title %}Dinosaurs List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Título -->
            <h2>Dinosaurs</h2>

            <!-- Opción crear un nuevo Dinosaurio solo si es Admin -->
            {% if is_granted('ROLE_ADMIN') %}
                <a href="#" class="btn bg-green text-black">Create New Dino</a>
            {% endif %}
        </div>

        <!-- Tabla -->
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">

                    <!-- Atributos de los Dinosaurios -->
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Diet</th>
                        <th>Period</th>
                        <th>Region</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Cargar todos los Dinosaurios -->
                    {% for dinosaur in dinosaurs %}
                        <tr>
                            <td>
                                <img src="{{ dinosaur.image|default('https://via.placeholder.com/50') }}"
                                     class="rounded-circle"
                                     alt="{{ dinosaur.name }}"
                                     style="object-fit: cover;"
                                     width="50" height="50">
                            </td>

                            <td class="fw-bold">
                                {{ dinosaur.name }}
                                {% if dinosaur.isPopular %}
                                    <span class="text-warning ms-1" title="Popular Dinosaur">★</span>
                                {% endif %}
                            </td>

                            <td>{{ dinosaur.type }}</td>

                            <td>
                                <span class="badge {% if 'carnivore' in dinosaur.diet|lower %}bg-danger{% elseif 'herbivore' in dinosaur.diet|lower %}bg-success{% else %}bg-secondary{% endif %}">
                                    {{ dinosaur.diet }}
                                </span>
                            </td>

                            <td>{{ dinosaur.period }}</td>

                            <td><small class="text-muted">{{ dinosaur.region }}</small></td>

                            <td>
                                <a href="{{ path('app_dinosaur_show', { id: dinosaur.id }) }}" class="btn btn-sm btn-outline-primary">View</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="#" class="btn btn-sm btn-outline-danger">Edit</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <!-- Texto por si no hay ningún Dinosaurio -->
                        <tr>
                            <td colspan="7" class="text-center py-4">No dinosaurs found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
