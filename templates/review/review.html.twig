{% extends 'base.html.twig' %}

{% block title %}Reseñas{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-5 p-4 bg-dark text-white rounded-3 shadow">
            <div>
                <h1 class="display-5 fw-bold mb-0">Reseñas de dinosaurios</h1>
                <p class="lead mb-0 text-info">Opiniones sobre especies del proyecto {{ dinosaurs|length }} registrados.</p>
            </div>
            <button class="btn btn-info btn-lg fw-bold" data-bs-toggle="collapse" data-bs-target="#formReview">
                <i class="bi bi-journal-plus me-2"></i>Nueva Review
            </button>
        </div>

        <div class="collapse mb-5" id="formReview">
            <div class="card border-info shadow">
                <div class="card-header bg-info text-dark fw-bold">Registrar nueva reseña</div>
                <div class="card-body">
                    <form action="{{ path('app_review_submit_global') }}" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Seleccionar Especie</label>
                                <select name="dinosaur_id" class="form-select" required>
                                    <option value="" selected disabled>Elige un dinosaurio...</option>
                                    {% for dino in dinosaurs %}
                                        <option value="{{ dino.id }}">
                                            {{ dino.name }} ({{ dino.type }}) - {{ dino.diet }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Puntuación</label>
                                <select name="rating" class="form-select">
                                    <option value="5">⭐⭐⭐⭐⭐ - Impresionante</option>
                                    <option value="4">⭐⭐⭐⭐ - Muy interesante</option>
                                    <option value="3">⭐⭐⭐ - Estándar</option>
                                    <option value="2">⭐⭐ - Poco relevante</option>
                                    <option value="1">⭐ - Decepcionante</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Comentario</label>
                            <textarea name="comment" class="form-control" rows="3" placeholder="Describe el comportamiento, tamaño o detalles..." required></textarea>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-dark px-5">Publicar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <h3 class="mb-4 border-bottom pb-2 text-secondary">Últimas Reseñas</h3>
        <div class="row">
            {% for review in reviews %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 overflow-hidden">
                        <div style="height: 180px; overflow: hidden; position: relative;">
                            <img src="{{ review.dinosaur.image }}" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="{{ review.dinosaur.name }}">
                            {% if review.dinosaur.isPopular %}
                                <span class="position-absolute top-0 end-0 m-2 badge bg-warning text-dark shadow">
                                <i class="bi bi-fire"></i> Popular
                            </span>
                            {% endif %}
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0 text-primary">{{ review.dinosaur.name }}</h5>
                                <span class="badge bg-light text-dark border">{{ review.rating }}/5 ⭐</span>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block">
                                    <i class="bi bi-geo-alt"></i> {{ review.dinosaur.region }} | <i class="bi bi-clock"></i> {{ review.dinosaur.period }}
                                </small>
                                <span class="badge {{ review.dinosaur.diet == 'Carnivorous' ? 'bg-danger' : 'bg-success' }} btn-sm mt-1">
                                {{ review.dinosaur.diet }}
                            </span>
                            </div>

                            <p class="card-text text-secondary font-italic" style="border-left: 3px solid #dee2e6; padding-left: 10px;">
                                "{{ review.comment }}"
                            </p>
                        </div>

                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                    {{ review.user.email|first|upper }}
                                </div>
                                <div class="ms-2">
                                    <p class="mb-0 small fw-bold text-dark">{{ review.user.email }}</p>
                                    <p class="mb-0 x-small text-muted" style="font-size: 0.75rem;">Usuario acreditado</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <p class="text-muted fs-4">No hay reseñas todavía</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
